
@{
    ViewBag.Title = "Orders";
}

<h2>Orders</h2>

    <div id="orderformhtml" name="orderformhtml">


        <form id="orderform" name="orderform">

            <button class="btn btn-link" id="statement" name="statement">Full Statement</button>


            <div class="clearfix"></div>
            <p>
                <div class="col-md-12">


                    <div class="col-md-12 persondetail">
                        <label class="col-sm-2">Customer/Dealer :-</label>

                        <input type="text" class="form-control" required readonly name="orderperson" id="orderperson" />


                    </div>

                    <div class="col-md-12 persondetail">
                        <label class="col-sm-2">Unique No. :-</label>
                        <input type="text" class="form-control" required readonly name="orderuniqe" id="orderuniqe" />

                    </div>

                    <div class="col-md-12 persondetail">
                        <label class="col-sm-2">Phone :-</label>

                        <input class="form-control" style="text-align:center;" required disabled name="orderphone" id="orderphone" />

                    </div>

                    <div class="col-md-12 persondetail">
                        <label class="col-sm-2">Address :-</label>

                        <input class="form-control" style="text-align:center;" required disabled name="orderaddress" id="orderaddress" />

                    </div>


                    <div class="col-md-12 persondetail">
                        <label class="col-sm-2">Balance :-</label>

                        <input class="form-control" style="text-align:center;" required disabled name="orderbal" id="orderbal" />

                    </div>



                </div>
            </p>


            <p>

            </p>

            <p>

            </p>

            <div class="col-md-12">


                <table id="orderrecordtable" name="orderrecordtable" class="table table-bordered table-hover table-striped">
                    <thead>
                        <tr>
                            <th>S/N</th>
                            <th>Date</th>
                            <th>Order No. </th>
                            <th>Type</th>
                            <th>Reference</th>
                            <th>Debit</th>
                            <th>Credit</th>
                            <th>Balance</th>


                        </tr>

                    </thead>

                    <tbody style="width: auto; margin: auto auto;" id="orderbody" name="orderbody"></tbody>



                </table>

                <div class="col-md-6" style="float:right;">

                    <span class="col-md-6">
                        <label>Total Transaction Amount</label>
                    </span>


                    <span class="col-md-4" style="float:right;">



                        <input type="number" class="form-control" readonly name="ordertotal" id="ordertotal" />


                    </span>


                </div>






                <div class="clearfix"></div>

            </div>



        </form>






        @section scripts{

            <script src="~/Scripts/Sites/Site_Jquery.js"></script>

        }


    </div>







