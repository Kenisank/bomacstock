
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
   


    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width" />
    <title>Test</title>
    <link href="/Content/bootstrap.css" rel="stylesheet">
    <link href="/Content/datatables/css/datatables.bootstrap.css" rel="stylesheet">
    <link href="/Content/site.css" rel="stylesheet">

    <script src="/Scripts/modernizr-2.6.2.js"></script>




</head> 
<body>
    <div> 




        <div class="modal" id="recordmodal" role="dialog" style="display:block;" aria-labelledby="recordmodalLabel" name="recordmodal">

            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="exampleModalLabel1">New Payment</h4>
                    </div>
                    <div id="recordmodal" name="recordmodal" class="modal-body">
                        <form id="recordform" name="recordform">

                            <div class="clearfix"></div>

                            <div class="form-group">

                              

                                <div class="col-md-6">
                                    <label>Customer/Dealer</label>
                                    <select class="form-control" id="persons2" required name="persons2"></select>

                                </div>

                                <div class="col-md-6">
                                    <label>Balance</label>
                                    <input type="number" class="form-control" readonly disabled style=" text-align:center; " required name="bal2" id="bal2" />
                                   

                                </div>


                            </div>

                            <div class="clearfix"></div>




                            <div class="form-group">

                                <div class="col-md-6">

                                    <label class="control-label">Mode</label>
                                    <select class="form-control" style="display: inline-table; text-align:center; " id="modes2" required name="modes2"></select>

                                    


                                </div>

                                <div class="col-md-6">

                                    <label class="control-label">Reference Number</label>
                                    <input type="text" class="form-control" style="display: inline-table; text-align:center; " required name="payref2" id="payref2" />


                                </div>

                            </div>

                            <div class="clearfix"></div>

                            


                            <div class="form-group col-md-12" style="display:inline-block">

                                <label style="display:block; text-align:center;">Company Account</label>

                                <span>
                                    <span class="col-md-6" style="display:inline-block; float:left">
                                        <select class="form-control" id="banks" required name="banks"></select>

                                    </span>

                                    <span class="col-md-6" style="display:inline-block; float:left">
                                        <select class="form-control" required name="accounts" id="accounts"> </select>

                                    </span>
                                </span>



                            </div>





                            <div class="clearfix"></div>

                            <div class="col-md-6">

                                <label class="control-label">Type</label>
                                <select class="form-control" style="display: inline-table; text-align:center; " id="types2" required name="types2"></select>




                            </div>

                            <div class="col-md-6">

                                <label class="control-label">Amount Paid</label>
                                <input type="text" class="form-control" style="display: inline-table; text-align:center; " required name="amtpaid" id="amtpaid" />


                            </div>

                           
                            <div class="clearfix"></div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default closemodal" data-dismiss="modal">Close</button>
                        <button type="submit" id="newrecord" name="newrecord" class="btn btn-primary">Add</button>
                    </div>
                </div>
            </div>


        </div>



    </div>



    <script src="/Scripts/jquery-1.10.2.js"></script>
    <script src="/Scripts/bootstrap.js"></script>
    <script src="/Scripts/respond.js"></script>
    <script src="/Scripts/datatables/jquery.datatables.js"></script>
    <script src="/Scripts/datatables/datatables.bootstrap.js"></script>



    <script src="/Scripts/Sites/Site_Jquery.js"></script>
    <script src="~/Scripts/Sites/Record_Jquery.js"></script>


</body>




</html>
