<div class="modal" id="recordmodal" role="dialog" aria-labelledby="recordmodalLabel" name="recordmodal">

    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="exampleModalLabel1">New Record</h4>
            </div>
            <div id="recordmodal" name="recordmodal" class="modal-body">
                <form id="recordform" name="recordform">

                    <div class="clearfix"></div>

                    <div class="form-group">

                        <div class="col-md-6">
                            <label>Stock Type</label>
                            <select class="form-control" id="types" required name="types"></select>


                        </div>

                        <div class="col-md-6">
                            <label>Stock Item</label>
                            <select class="form-control" id="items" required name="items"></select>

                        </div>


                    </div>

                    <div class="clearfix"></div>




                    <div class="form-group">

                        <div class="col-md-6">

                            <label class="control-label">Balance Reams</label>
                            <input type="number" class="form-control" readonly disabled style="display: inline-table; text-align:center; " required name="breamsi" id="breamsi" />


                        </div>

                        <div class="col-md-6">

                            <label class="control-label">Balance Sheets</label>
                            <input type="number" class="form-control" readonly disabled style="display: inline-table; text-align:center; " required name="bsheetsi" id="bsheetsi" />


                        </div>

                    </div>

                    <div class="clearfix"></div>

                    <div class="form-group">

                        <div class="col-md-6">

                            <label class="control-label">Reams</label>
                            <input type="number" class="form-control" required name="reams" id="reams" />


                        </div>

                        <div class="col-md-6">

                            <label class="control-label">Sheets</label>
                            <input type="number" class="form-control" style="display: inline-table; " required name="sheets" id="sheets" />


                        </div>

                    </div>






                    <div class="clearfix"></div>

                    <div class="form-group col-md-12" style="display:inline-block">


                        <input type="checkbox" class="checkbox" style="display:inline-block" value="true" id="isdamaged" name="isdamaged" />
                        <label class="control-label">Damaged</label>







                    </div>

                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default closemodal" data-dismiss="modal">Close</button>
                <button type="submit" id="newrecord" name="newrecord" class="btn btn-primary">Add</button>
            </div>
        </div>
    </div>


</div>


